include includes/changePage.pug
html
  head
    
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
    integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    
    style(type='text/css').
           body {
            background: #212529;
        }

        .my-container {
            margin: 0 auto;
            max-width: 48rem;
            width: 90%;
            height: 100vh;
            background-color: #cecaca;
        }

        .not-found {
            margin: 30px;
            font-weight: bold;
            font-size: 22px;
        }

        .change-page-btn {
            display: inline-block;
            position: absolute;
            bottom: 10px;
        }

        h2 {
            padding: 10px;
            margin-bottom: 40px;
            color: #2840FB;
            font-weight: bold;
            font-size: 35px;
        }

        table {
            text-align: center;
        }
  body
    .container-fluid

    if pageContent == 'form'
        div
        .my-container.container-fluid
            include includes/form.pug
    else if pageContent == 'productList'
        div
        .my-container.container-fluid
            include includes/productList.pug