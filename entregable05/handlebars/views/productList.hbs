<h2>Vista de productos</h2>

{{#if productos.length}}
<table class="table table-dark">
    <thead>
        <tr class="table-active">
            <th>Producto</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>$ {{this.price}}</td>
            <td><img src="{{this.thumbnail}}" width="60px" height="40px"></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class=" not-found alert alert-warning" role="alert">
    No se encontraron productos
</div>

{{/if}}

<br>
{{> changePage }}